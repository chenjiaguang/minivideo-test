/* components/dynamicContent/dynamicContent.wxss */
@import "../../assets/styles/common-flex.wxss";

.container {
  overflow: hidden;
  position: relative;
  line-height: 48rpx;
  padding: 0 4%;
  transition: all 300ms;
}

.content {
  font-size: 36rpx;
  color: #333;
  line-height: 48rpx;
  width: 100%;
}

.open-box {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 144rpx;
  height: 48rpx;
  background: linear-gradient(90deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 1) 40%, rgba(255, 255, 255, 1));
}

.open {
  position: absolute;
  right: 0;
  top: 0;
  background-color: #fff;
  color: #777;
  font-size: 36rpx;
}
