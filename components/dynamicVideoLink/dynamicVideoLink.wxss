/* components/dynamicVideoLink/dynamicVideoLink.wxss */
@import "../../app.wxss";
@import "../../assets/styles/common-flex.wxss";
@import "../../assets/styles/iconfont.wxss";

.video-wrapper{
  width: 100%;
}
.video-box{
  position: relative;
  width: 100%;
}
.video-box.type1{
  padding-top: 100%;
}
.video-box.type2{
  padding-top: 56.5333%;
}
.cover{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 1;
}
.mask{
  position: absolute;
  background-color: rgba(0,0,0,0.1);
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 2;
}
.play-button{
  color: rgba(255, 255, 255, 0.9);
  font-size: 88rpx;
}
.duration{
  color: #FFFFFF;
  font-size: 24rpx;
  line-height: 32rpx;
  position: absolute;
  right: 20rpx;
  bottom: 16rpx;
}
.video-overview{
  font-size: 28rpx;
  line-height: 36rpx;
  padding: 16rpx 30rpx;
}
.title {
  color: #333333;
  font-weight: bold;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.from {
  color: #666666;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  text-transform: uppercase;
}
