/* components/dynamicVideoLink/dynamicVideoLink.wxss */
@import "../../assets/styles/common-flex.wxss";
@import "../../assets/styles/iconfont.wxss";

.container {
  background-color: #f0f0f0;
  border-radius: 14rpx;
  overflow: hidden;
}

.top {
  height: 424rpx;
  position: relative;
}
.cover {
  width: 100%;
  height: 100%;
}
.mask{
  position: absolute;
  background-color: rgba(0,0,0,0.1);
  right: 0;
  bottom: 0;
  top: 0;
  left: 0
}
.play-button{
  color: rgba(255, 255, 255, 0.9);
  font-size: 88rpx;
}
.duration{
  color: #FFFFFF;
  font-size: 24rpx;
  position: absolute;
  right: 16rpx;
  bottom: 14rpx;
}

.bottom {
  padding: 16rpx 30rpx 16rpx 30rpx;
}

.title {
  color: #333333;
  font-size: 28rpx;
  line-height: 36rpx;
  font-weight: bold;
  
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.from {
  color: #666666;
  font-size: 28rpx;
  line-height: 36rpx;
}
