/**index.wxss**/

.container {
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.recommend-topic {
  white-space: nowrap;
}

.topic-item {
  display: inline-table;
  width: 158rpx;
  height: 158rpx;
  margin: 0 8rpx;
  overflow: hidden;
  position: relative;
  flex-shrink: 0;
  border-radius: 8rpx;
}

.topic-item:first-child {
  margin-left: 30rpx;
}

.topic-item:last-child {
  margin-right: 30rpx;
}

.topic-image {
  display: block;
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 1;
}

.topic-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  z-index: 2;
  left: 0;
  top: 0;
}

.topic-title {
  position: absolute;
  left: 10rpx;
  right: 10rpx;
  top: 92rpx;
  font-size: 24rpx;
  line-height: 28rpx;
  color: #fff;
  z-index: 3;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  white-space: pre-wrap;
}

.icon-topic_v_2_5 {
  font-size: 24rpx;
  color: #ff611a;
}
