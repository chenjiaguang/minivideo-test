<!--pages/topicdetail/topicdetail.wxml-->
<scroll-view class='p-topicdetail' bindscroll='pageScroll' scroll-y="{{true}}">
  <view class='header'>话题头部</view>
  <view id='tab-wrapper' class='tab-wrapper'>
    <view class="tab {{stickyTab ? 'sticky' : ''}}">tab切换</view>
  </view>
  <view class='list'>
    <image-box images="{{images}}"></image-box>
  </view>
  <view bindtap="deleteImage">删除图片</view>
  <view bindtap="addImage">添加图片</view>
</scroll-view>