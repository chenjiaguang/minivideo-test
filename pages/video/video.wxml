<!--pages/video/video.wxml-->
<view class='page-video'>
  <video id="video-player" bindfullscreenchange='onFullScreenChange' bindtouchmove='touchmove' autoplay class="video-player" src="http://112.67.251.151/vipzj.video.tc.qq.com/AKEbTUvVQq0e5xfKSk8LbFhRGEZe9C2cOQ-cFOkGiqUQ/uwMRJfz-r5jAYaQXGdGnC2_ppdhgmrDlPaRvaV7F2Ic/t0027jni9cj.mp4?vkey=D155040F95B48EF90F84EEB323402D213CCA0C8876DC4345A741803A291D26D56151061F0F6A9E69055997DBB377A3BEB2B1FE9BCCC7E928F4293098F131D619A6D962507576A64C65921515EF10F92FB20ACF497D7BC88FA5C8DD7954DAFAC70C1063293A954B39">
    <cover-view bindtouchmove="touchmove" class='touch-mask'>
      <cover-view class='progress-wrapper'>
        <cover-view class='current-time'>{{currentTimeText}}</cover-view>
        <cover-view class='progress-slider'>
          <cover-view id="progress-body" class='progress-slider-inner'>
            <cover-view wx:for="{{buffered}}" wx:key="{{item.start}}" class='progress-slider-buffered'></cover-view>
            <cover-view class='progress-slider-inner-played' style="width:{{percent * 100}}%"></cover-view>
          </cover-view>
          <cover-view bindtouchstart='touchstart' bindtouchend='touchend' bindtouchcancel='touchend' class='progress-slider-btn' style="left:{{percent * 100}}%;opacity:{{touchDown ? 0.5 : 1}}"></cover-view>
        </cover-view>
        <cover-view class='end-time'>{{maxTimeText}}</cover-view>
        <cover-image wx:if="showFullScreen" hidden="{{isFullScreen}}" bindtap='changeFullScreen' class="change-screen" src="/image/fullscreen.png"></cover-image>
        <cover-image wx:id="showFullScreen" hidden="{{!isFullScreen}}" bindtap='changeFullScreen' class="change-screen" src="/image/exit_fullscreen.png"></cover-image>
      </cover-view>
      <button class='touch-button'></button>
    </cover-view>
  </video>
</view>