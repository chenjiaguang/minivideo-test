/* pages/video/video.wxss */

page{
  overflow: hidden;
}
.page-video {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.video-player {
  width: 100%;
  height: 100%;
  z-index: 1;
}

.touch-mask {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0.7;
  z-index: 2;
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.progress-wrapper{
  height: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
}
.progress-slider{
  height: 100%;
  flex: 1;
  position: relative;
  overflow: visible;
}
.progress-slider-inner{
  height: 6rpx;
  background: #B7B7B7;
  border-radius: 3rpx;
  position: absolute;
  left: 30rpx;
  top: 50%;
  right: 30rpx;
  margin-top: -3rpx;
  overflow: hidden;
}
.progress-slider-buffered{
  height: 100%;
  position: absolute;
  top: 0;
  background: #fff;
}
.progress-slider-inner-played{
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background: #1EB0FD;
}
.progress-slider-btn{
  width: 30rpx;
  height: 30rpx;
  background: #fff;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  margin-top: -15rpx;
  margin-left: 10rpx;
}
.change-screen{
  width: 38rpx;
  height: 38rpx;
  margin-left: 30rpx;
}
